@page
@model SoftwareHotel.Pages.Gallery.GalleryModel



@{
    ViewData["Title"] = "Galería";
}

<div class="container py-5">
    <header class="text-center mb-5">
        <h1 class="display-5 text-primary fw-bold">Galería</h1>
        <p class="lead text-muted">Explora la belleza de Kolorina Hotel Campestre y sus alrededores</p>
    </header>


    <section class="mb-5">
        <h2 class="text-center text-secondary mb-4">Nuestro Hotel</h2>
        <div class="row g-4 justify-content-center">
            <div class="col-md-4 d-flex justify-content-center">
                <img src="~/Assets/Finca1.jpg" class="img-fluid rounded shadow img-uniforme" alt="Vista del hotel">
            </div>
            <div class="col-md-4 d-flex justify-content-center">
                <img src="~/Assets/Finca2.jpg" class="img-fluid rounded shadow img-uniforme" alt="Habitaciones del hotel">
            </div>
            <div class="col-md-4 d-flex justify-content-center">
                <img src="~/Assets/Finca3.jpg" class="img-fluid rounded shadow img-uniforme" alt="Piscina y áreas verdes">
            </div>
        </div>
    </section>

    <section class="mb-5">
        <h2 class="text-center text-secondary mb-4">Lugares de Interés Cercanos</h2>
        <div class="row g-4 justify-content-center">
            <div class="col-md-4 d-flex justify-content-center">
                <img src="~/Assets/Jerico1.jpg" class="img-fluid rounded shadow img-uniforme" alt="Montañas de Jericó">
            </div>
            <div class="col-md-4 d-flex justify-content-center">
                <img src="~/Assets/Jerico4.jpg" class="img-fluid rounded shadow img-uniforme" alt="Cascadas naturales">
            </div>
            <div class="col-md-4 d-flex justify-content-center">
                <img src="~/Assets/Jerico3.jpg" class="img-fluid rounded shadow img-uniforme" alt="Calles coloniales de Jericó">
            </div>
        </div>
    </section>

    <!-- Botón de regreso -->
    <div class="text-center mt-4">
        <a href="/Index" class="btn btn-lg btn-primary shadow-sm">Volver al Inicio</a>
    </div>
</div>