@page
@model SoftwareHotel.Pages.AccountModel
@{
    ViewData["Title"] = "Cuenta";
}

<div class="container py-5">
    <header class="text-center mb-5">
        <h1 class="display-5 text-primary fw-bold">Iniciar Sesión</h1>
        <p class="lead text-muted">Accede a tu cuenta para gestionar reservas</p>
    </header>

    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card shadow-sm">
                <div class="card-body">
                    <h2 class="text-center text-secondary mb-4">SoftwareHotel</h2>
                    <form method="post">
                        <div class="mb-3">
                            <label class="form-label">Correo electrónico</label>
                            <input asp-for="Email" type="email" class="form-control" placeholder="Correo electrónico" required>
                            <span asp-validation-for="Email" class="text-danger"></span>
                        </div>
                        <div class="mb-3">
                            <label class="form-label">Contraseña</label>
                            <input asp-for="Password" type="password" class="form-control" placeholder="Contraseña" required>
                            <span asp-validation-for="Password" class="text-danger"></span>
                        </div>
                        <button type="submit" class="btn btn-primary w-100">Ingresar</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
